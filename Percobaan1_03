import java.util.Scanner;

public class TugasPercobaan1_03 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double HARGA_TIKET = 50000;
        int totalTiketTerjual = 0;
        double totalPendapatan = 0;

        System.out.println("Penjualan Tiket Bioskop");
        System.out.println("Input angka 0 untuk mengakhiri pesanan tiket.");

        int jumlahTiket;

        do {
            System.out.print("Masukkan jumlah tiket yang dibeli: ");
              jumlahTiket= sc.nextInt(); { {
                System.out.println("Input tidak valid.");
                System.out.print("Masukkan jumlah tiket yang dibeli: ");
            }

            jumlahTiket = sc.nextInt();

            if (jumlahTiket == 0) {
                break;
            }
            if (jumlahTiket < 0) {
                System.out.println("Masukkan jumlah tiket (TIDAK BOLEH NEGATIF)");
                continue;
            }

            double totalHarga = jumlahTiket * HARGA_TIKET;
            if (jumlahTiket > 10) {
                totalHarga *= 0.85; 
                System.out.println("Diskon 15%.");
            } else if (jumlahTiket > 4) {
                totalHarga *= 0.90; 
                System.out.println("Diskon 10%.");
            }

            totalTiketTerjual += jumlahTiket;
            totalPendapatan += totalHarga;

            System.out.printf("TOTAL BIAYA CUSTOMER: Rp % ", totalHarga);

        }
        } while (true);
        System.out.println("\n Penjualan Hari Ini \n");
        System.out.println("Total tiket terjual: " + totalTiketTerjual);
        System.out.print("Total pendapatan: Rp %, " + totalPendapatan);
        

        sc.close();
}
}
